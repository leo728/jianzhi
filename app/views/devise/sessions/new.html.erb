<h2>登 录</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: "E-mail" %>
    <%= f.input :password, required: false, label: "密码" %>
    <!-- <%= f.input :user_type, as: :radio_buttons, collection: [ ['个人用户', 1], ['企业用户',2] ], required: true, label: "用户类型" %> -->
    <%= f.input :remember_me, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登 录" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
