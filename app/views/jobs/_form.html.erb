<%= simple_form_for [current_user,@job] do |f| %>
  <div class="form-group">
    <%= f.input :title,  :label => "职位名称", input_html: { class: "form-control"} %>
    <%= f.input :description, :label => "职位描述", input_html: { class: "form-control"} %>
    <%= f.input :wage_lowr_bound, :label => "薪资下限", input_html: { class: "form-control"} %>
    <%= f.input :wage_upper_bound, :label => "薪资上限", input_html: { class: "form-control"} %>
    <%= f.input :is_hidden, :label => "是否隐藏" %>
  </div>
  <%= f.submit "保存", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
